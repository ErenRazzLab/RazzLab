rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write their own data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Razz documents are publicly readable; writes are restricted to authenticated users
    match /razzes/{razzId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    // Collection for participants in a razz (subcollection of a razz)
    match /razzes/{razzId}/participants/{participantId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == participantId;
    }
    // Fallback rule: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}