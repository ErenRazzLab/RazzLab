{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/stripe/create-payment-intent",
        "function": "createPaymentIntent"
      },
      {
        "source": "/api/stripe/webhook",
        "function": "stripeWebhook"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "cleanUrls": true,
    "trailingSlash": false
  }
}